<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2F2F2"
    tools:context=".Football_categories">

    <!-- Back Arrow ImageView -->
    <ImageView
        android:id="@+id/back_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/baseline_back_24"
        android:layout_alignParentStart="true"
        android:layout_marginStart="48dp"
        android:layout_marginTop="45dp"/>

    <!-- Title TextView -->
    <TextView
        android:id="@+id/hd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Football Categories"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#333333"
        android:layout_marginTop="45dp"
        android:layout_marginBottom="16dp"
        android:layout_centerHorizontal="true" />

    <!-- Main Image ImageView -->
    <ImageView
        android:id="@+id/image"
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:layout_below="@id/hd"
        android:scaleType="centerCrop"
        android:src="@drawable/fkf"
        android:layout_centerHorizontal="true"
        android:paddingStart="20dp"
        android:paddingEnd="20dp" />

    <!-- Pick a League TextView -->
    <TextView
        android:id="@+id/pk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pick a League"
        android:textColor="#333333"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_below="@id/image"
        android:layout_marginTop="16dp"
        android:layout_centerHorizontal="true" />

    <!-- Shadowed Horizontal Line -->
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@id/pk"
        android:background="@android:color/darker_gray"
        android:layout_marginTop="8dp"
        android:elevation="2dp"/>

    <!-- League Options LinearLayout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/pk"
        android:padding="16dp">

        <!-- FKF Premier League RelativeLayout -->
        <RelativeLayout
            android:id="@+id/FKFPremierLeague"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:background="?attr/selectableItemBackground">

            <ImageView
                android:id="@+id/image1"
                android:layout_width="100dp"
                android:layout_height="60dp"
                android:scaleType="centerCrop"
                android:src="@drawable/fkf" />

            <TextView
                android:id="@+id/text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/image1"
                android:layout_marginStart="16dp"
                android:layout_centerVertical="true"
                android:text="FKF Premier League"
                android:textSize="16sp"
                android:textColor="#666666" />
        </RelativeLayout>

        <!-- Shadowed Horizontal Line -->
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@id/FKFPremierLeague"
            android:background="@android:color/darker_gray"
            android:layout_marginTop="8dp"
            android:elevation="2dp"/>

        <!-- FKF National Super League RelativeLayout -->
        <RelativeLayout
            android:id="@+id/FKFNationalSuperLeague"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:background="?attr/selectableItemBackground">

            <ImageView
                android:id="@+id/image2"
                android:layout_width="100dp"
                android:layout_height="60dp"
                android:scaleType="centerCrop"
                android:src="@drawable/fkf" />

            <TextView
                android:id="@+id/text2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/image2"
                android:layout_marginStart="16dp"
                android:layout_centerVertical="true"
                android:text="FKF National Super League"
                android:textSize="16sp"
                android:textColor="#666666" />
        </RelativeLayout>

        <!-- Shadowed Horizontal Line -->
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@id/FKFNationalSuperLeague"
            android:background="@android:color/darker_gray"
            android:layout_marginTop="8dp"
            android:elevation="2dp"/>

        <!-- Mozzart Bet Cup RelativeLayout -->
        <RelativeLayout
            android:id="@+id/MozzartBetCup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:background="?attr/selectableItemBackground">

            <ImageView
                android:id="@+id/image3"
                android:layout_width="100dp"
                android:layout_height="60dp"
                android:scaleType="centerCrop"
                android:src="@drawable/fkf" />

            <TextView
                android:id="@+id/text3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/image3"
                android:layout_marginStart="16dp"
                android:layout_centerVertical="true"
                android:text="Mozzart Bet Cup"
                android:textSize="16sp"
                android:textColor="#666666" />
        </RelativeLayout>

        <!-- Shadowed Horizontal Line -->
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@id/MozzartBetCup"
            android:background="@android:color/darker_gray"
            android:layout_marginTop="8dp"
            android:elevation="2dp"/>

        <!-- FKF Women National Super League RelativeLayout -->
        <RelativeLayout
            android:id="@+id/FKFWomenNationalSuperLeague"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:background="?attr/selectableItemBackground">

            <ImageView
                android:id="@+id/image4"
                android:layout_width="100dp"
                android:layout_height="60dp"
                android:scaleType="centerCrop"
                android:src="@drawable/fkf" />

            <TextView
                android:id="@+id/text4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/image4"
                android:layout_marginStart="16dp"
                android:layout_centerVertical="true"
                android:text="FKF Women National Super League"
                android:textSize="16sp"
                android:textColor="#666666" />
        </RelativeLayout>

        <!-- Shadowed Horizontal Line -->
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@id/FKFWomenNationalSuperLeague"
            android:background="@android:color/darker_gray"
            android:layout_marginTop="8dp"
            android:elevation="2dp"/>

        <!-- Division One League RelativeLayout -->
        <RelativeLayout
            android:id="@+id/DivisionOneLeague"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:background="?attr/selectableItemBackground">

            <ImageView
                android:id="@+id/image5"
                android:layout_width="100dp"
                android:layout_height="60dp"
                android:scaleType="centerCrop"
                android:src="@drawable/fkf" />

            <TextView
                android:id="@+id/text5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/image5"
                android:layout_marginStart="16dp"
                android:layout_centerVertical="true"
                android:text="Division One League"
                android:textSize="16sp"
                android:textColor="#666666" />
        </RelativeLayout>

        <!-- Shadowed Horizontal Line -->
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@id/DivisionOneLeague"
            android:background="@android:color/darker_gray"
            android:layout_marginTop="8dp"
            android:elevation="2dp"/>
    </LinearLayout>
</RelativeLayout>
