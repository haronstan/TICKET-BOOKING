<?xml version="1.0" encoding="utf-8"?>
<!-- Main layout container -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context=".SignUp">

    <!-- Title TextView -->
    <TextView
        android:id="@+id/txtCreateAccount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:text="Create An Account"
        android:textColor="#03A9F4"
        android:textSize="50dp"
        android:textStyle="bold" />

    <!-- CardView containing the form fields -->
    <androidx.cardview.widget.CardView
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtCreateAccount"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:cardCornerRadius="15dp">

        <!-- Inner RelativeLayout within the CardView -->
        <RelativeLayout
            android:id="@+id/cardRelLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#FFFFFF">

            <!-- First Name EditText -->
            <EditText
                android:id="@+id/first_Name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:backgroundTint="#000000"
                android:layout_marginTop="40dp"
                android:ems="13"
                android:hint="Type in your first name"
                android:inputType="text"
                android:textColorHint="#AAA4A4" />

            <!-- Last Name EditText -->
            <EditText
                android:id="@+id/last_Name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/first_Name"
                android:layout_centerHorizontal="true"
                android:backgroundTint="#000000"
                android:ems="13"
                android:hint="Type in your last name"
                android:inputType="text"
                android:textColorHint="#AAA4A4" />

            <!-- Phone Number EditText -->
            <EditText
                android:id="@+id/phoneNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/last_Name"
                android:layout_centerHorizontal="true"
                android:backgroundTint="#000000"
                android:ems="13"
                android:hint="Phone number"
                android:inputType="phone"
                android:textColorHint="#AAA4A4" />

            <!-- Email EditText -->
            <EditText
                android:id="@+id/email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:backgroundTint="#000000"
                android:layout_below="@id/phoneNo"
                android:ems="13"
                android:hint="Type in your email"
                android:inputType="textEmailAddress"
                android:textColorHint="#AAA4A4"
                android:textSize="18sp" />

            <!-- Password EditText -->
            <EditText
                android:id="@+id/loginPassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/email"
                android:layout_centerHorizontal="true"
                android:backgroundTint="#000000"
                android:ems="13"
                android:hint="Password"
                android:inputType="textPassword"
                android:textColorHint="#AAA4A4" />

            <!-- Confirm Password EditText -->
            <EditText
                android:id="@+id/confirmPassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/loginPassword"
                android:layout_centerHorizontal="true"
                android:backgroundTint="#000000"
                android:ems="13"
                android:hint="Retype password"
                android:inputType="textPassword"
                android:textColorHint="#AAA4A4" />

            <!-- Sign Up Button -->
            <Button
                android:id="@+id/signUpBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/confirmPassword"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="6dp"
                android:backgroundTint="#03A9F4"
                android:text="Create Account"
                android:textColor="@color/white"
                android:textStyle="bold" />

            <!-- Already have an account TextView -->
            <TextView
                android:id="@+id/alreadyAccount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/signUpBtn"
                android:layout_marginLeft="65dp"
                android:layout_marginBottom="6dp"
                android:text="Already have an account?"
                android:textColor="#000000"
                android:textStyle="bold" />

            <!-- Sign In Button -->
            <Button
                android:id="@+id/signInBtn"
                android:layout_width="wrap_content"
                style="@style/Widget.Material3.Button.TextButton"
                android:layout_height="wrap_content"
                android:layout_below="@id/signUpBtn"
                android:layout_marginLeft="6dp"
                android:layout_toRightOf="@id/alreadyAccount"
                android:clickable="true"
                android:text="Sign in"
                android:textColor="#277ee4"
                android:textStyle="bold" />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>
