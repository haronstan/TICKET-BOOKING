<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8FAFB"
    tools:context=".MainActivity">

    <!-- Title TextView -->
    <TextView
        android:id="@+id/txtCreateAccount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:fontFamily="cursive"
        android:gravity="center_horizontal"
        android:text="STADIUM TICKET BOOKING APPLICATION"
        android:textColor="#03A9F4"
        android:textSize="27dp"
        android:textStyle="bold" />

    <!-- Image View -->

    <!-- Welcome TextView -->

    <!-- Description TextView -->

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="300dp"
        android:layout_height="320dp"
        android:layout_below="@+id/txtCreateAccount"
        android:layout_alignParentStart="true"
        android:layout_marginStart="42dp"
        android:layout_marginTop="-47dp"
        android:layout_marginBottom="50dp"
        android:paddingTop="1dp"
        app:srcCompat="@drawable/fkf" />

    <TextView
        android:id="@+id/txt1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView2"
        android:layout_alignParentStart="true"
        android:layout_marginStart="18dp"
        android:layout_marginTop="5dp"
        android:fontFamily="cursive"
        android:gravity="center"
        android:text="Welcome to our Stadium Ticket Booking System!"
        android:textColor="@color/black"
        android:textSize="21dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt1"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="20dp"
        android:fontFamily="cursive"
        android:text="Book tickets online for sports matches and events at our stadium. Easy booking, interactive seat maps, secure payments, instant confirmation, 24/7 customer support."
        android:textColor="@color/black"
        android:textSize="25dp"
        android:textAlignment="textStart" />

    <!-- Get Started -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn"
        android:layout_width="136dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/txt"
        android:layout_alignEnd="@+id/txt"
        android:layout_alignBottom="@+id/txt"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="120dp"
        android:layout_marginEnd="115dp"
        android:layout_marginBottom="10dp"
        android:backgroundTint="#277ee4"
        android:gravity="center"
        android:text="Get Started"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/mains"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_below="@+id/txt1"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="-5dp"
        android:layout_marginEnd="150dp"
        android:layout_marginBottom="20dp"
        android:backgroundTint="#277ee4"
        android:gravity="center"
        android:text="MainActivity"
        android:textColor="@color/white"
        android:textSize="5dp"
        android:textStyle="bold" />

</RelativeLayout>
