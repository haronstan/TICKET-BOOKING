<?xml version="1.0" encoding="utf-8"?>
<!-- Main layout container -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:padding="16dp"
    tools:context=".SettingsFragment">

    <!-- Header TextView for Settings -->
    <TextView
        android:id="@+id/head"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Settings"
        android:textSize="24sp"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:textColor="#000000"
        android:layout_marginTop="16dp"/>

    <!-- Search Bar for settings -->
    <EditText
        android:id="@+id/search_settings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Search settings"
        android:drawableLeft="@drawable/baseline_search_24"
        android:padding="10dp"
        android:layout_below="@id/head"
        android:layout_marginTop="16dp"/>

    <!-- Account Info section -->
    <LinearLayout
        android:id="@+id/account_info_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/search_settings"
        android:layout_marginTop="16dp"
        android:orientation="horizontal"
        android:padding="10dp">

        <!-- Account Info Icon -->
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_person_24"/>

        <!-- Account Info Text -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="Account Info"
            android:textSize="18sp"
            android:textColor="#000000" />
    </LinearLayout>

    <!-- Notifications section -->
    <LinearLayout
        android:id="@+id/notifications_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/account_info_section"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        android:padding="10dp">

        <!-- Notifications Icon -->
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_notifications_24" />

        <!-- Notifications Text -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="Notifications"
            android:textSize="18sp"
            android:textColor="#000000" />
    </LinearLayout>

    <!-- Languages section -->
    <LinearLayout
        android:id="@+id/languages_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/notifications_section"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        android:padding="10dp">

        <!-- Languages Icon -->
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_language_24" />

        <!-- Languages Text -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="Language"
            android:textSize="18sp"
            android:textColor="#000000" />
    </LinearLayout>

    <!-- Privacy & Security section -->
    <LinearLayout
        android:id="@+id/privacy_security_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/languages_section"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        android:padding="10dp">

        <!-- Privacy & Security Icon -->
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_privacy_security_24" />

        <!-- Privacy & Security Text -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="Password"
            android:textSize="18sp"
            android:textColor="#000000" />
    </LinearLayout>

    <!-- OTP Code section -->
    <LinearLayout
        android:id="@+id/otp_code_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/privacy_security_section"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        android:padding="10dp">

        <!-- OTP Code Icon -->
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_otp_24" />

        <!-- OTP Code Text -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="OTP Code"
            android:textSize="18sp"
            android:textColor="#000000" />
    </LinearLayout>

    <!-- Help section -->
    <LinearLayout
        android:id="@+id/help_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/otp_code_section"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        android:padding="10dp">

        <!-- Help Icon -->
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_help_24" />

        <!-- Help Text -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="Help"
            android:textSize="18sp"
            android:textColor="#000000" />
    </LinearLayout>

    <!-- About section -->
    <LinearLayout
        android:id="@+id/about_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/help_section"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        android:padding="10dp">

        <!-- About Icon -->
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_about_24" />

        <!-- About Text -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="About"
            android:textSize="18sp"
            android:textColor="#000000" />
    </LinearLayout>

    <!-- Sign Out section -->
    <LinearLayout
        android:id="@+id/sign_out_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/about_section"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        android:padding="10dp">

        <!-- Sign Out Icon -->
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_signout_24" />

        <!-- Sign Out Text -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="Sign Out"
            android:textSize="18sp"
            android:textColor="#000000" />
    </LinearLayout>

    <!-- Delete Account section -->
    <LinearLayout
        android:id="@+id/delete_account_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/sign_out_section"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        android:padding="10dp">

        <!-- Delete Account Icon -->
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_delete_24" />

        <!-- Delete Account Text -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="Delete Account"
            android:textSize="18sp"
            android:textColor="#FF0000" />
    </LinearLayout>

    <!-- Bottom Navigation -->
    <LinearLayout
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:background="#FFFFFF"
        android:elevation="4dp"
        android:padding="10dp">

    </LinearLayout>
</RelativeLayout>
